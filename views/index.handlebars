<div class="container">
    <div class="jumbotron">
        <h1>Burger King...dom</h1>
        <hr>
    </div>

    <img class="burgerImg" src="https://image.freepik.com/free-vector/cartoon-burger_60352-2576.jpg" alt="Burger Image">
    
    <div class="row">
        <div class="col-sm-6">
            <ul class="uneaten">
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block devour=true}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <ul class="eaten">
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/burger-block devour=false}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    


    <h2>What burger would you like?</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="burgerTxt" name="name">
        </div>
        <button class="btn btn-primary" type="submit">Add burger</button>
    </form>
</div>